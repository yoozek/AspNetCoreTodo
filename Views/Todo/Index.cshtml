@model TodoViewModel;
@using Humanizer;


@{
    ViewData["Title"] = "Manage your todo list";
}


<div class="panel panel-default todo-panel">
    <div class="panel-heading">@ViewData["Title"]</div>

    <table class="table table-hover">
        <thead>
            <tr>
                <td>&#x2714</td>
                <td>Item</td>
                <td>Due</td>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>
                    <input type="checkbox" name="@item.Id" value="true" class="done-checkbox">
                </td>
                <td>@item.Title</td>
                <td>@item.DueAt.Humanize()</td>
            </tr>
        }
        </tbody>
    </table>

    <div class="panel-footer add-item-form">
        <h4>Add new item</h4>
        <form>
            <div id="add-item-error" class="alert alert-danger"></div>
            <div class="row equal form-group">
                <div class="col-sm-4">
                    <label for="add-item-title">Title</label>
                    <input id="add-item-title" class="form-control">  
                </div>
                <div class="col-sm-4">
                    <label for="add-item-dueDate">Due date</label>
                    <input id="add-item-dueDate" type='datetime-local' class="form-control"/>
                </div>
                <div class="col-sm-4 add-button-col">
                    <button id="add-item-button" type="button" class="btn btn-success btn-block">Add</button>
                </div>
            </div>
        </form>
    </div>
</div>